<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <meta name="theme-color" content="{{ settings.colors_text }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'api.jquery.js' | shopify_asset_url  }}" defer="defer"></script>  
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'countdown.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'jquery.min.js' | asset_url }}"></script>
    <script src="{{ 'jquery-cookie.min.js' | asset_url }}"></script> 
    {{ content_for_header }}
    {% style %}
      :root {
        --second-font: {{ settings.body_font | remove: 'Google+' | replace: '+', ' ' }}, sans-serif;
        --first-font: {{ settings.type_header_font | remove: 'Google+' | replace: '+', ' ' }}, serif;
        --theme-color: {{ settings.primary_color }};
        --second-color: {{ settings.secondary_color }};
        --white: {{ settings.primary_font }};
        --black: {{ settings.secondary_font }};
        --border-color: {{ settings.border_color }};
        --h1: normal 600 51px/1.2 var(--first-font);
        --h2: normal 600 41px/1.2 var(--first-font);
        --h3: normal 600 26px/1.2 var(--first-font);
        --h4: normal 600 22px/1.2 var(--first-font);
        --h5: normal 600 18px/1.2 var(--first-font);
        --h6: normal 600 14px/1.2 var(--first-font);
        --common-text: normal 400 16px/1.4 var(--second-font);
      }
      html {
        box-sizing: border-box;
        height: 100%;
      }
      .home-slider-right-col:before {
        content: '';
        position: absolute;
        width: 40px;
        height: 85px; 
        top: 40px;
        background: url('{{ "slider-curv.png" | asset_url }}') 0 0 no-repeat;
        left: 0;
      }
    {% endstyle %}

   {% if shop.locale == 'ar' or shop.locale == 'he' or shop.locale == 'ur' %} 
      {{ 'rtl.css' | asset_url | stylesheet_tag }} 
    {% else %}
      {{ 'base.css' | asset_url | stylesheet_tag }}
      {{ 'new-custom.css' | asset_url | stylesheet_tag }}
    {% endif %}
    {{ 'jquery.fancybox.min.css' | asset_url | stylesheet_tag }}


      <link href="https://fonts.googleapis.com/css2?family={{ settings.body_font | remove: 'Google+' }}:wght@300;400;500;600;700&display=swap" rel="stylesheet" as="font">

      <link href="https://fonts.googleapis.com/css2?family={{ settings.type_header_font | remove: 'Google+' }}:wght@400;500;600;700&display=swap" rel="stylesheet" as="font">


    {%- if settings.predictive_search_enabled -%}
      <link rel="stylesheet" href="{{ 'component-predictive-search.css' | asset_url }}" media="print" onload="this.media='all'">
    {%- endif -%}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    if (Shopify.designMode) {
      document.documentElement.classList.add('shopify-design-mode');
    }
    </script>

  </head>

  <body class="gradient {% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}">
    <div class="overlay cart-overlay"></div>
    <style>.ttloader {background-color:  {{ settings.preloader_bg }};height: 100%;left: 0;position: fixed;top: 0; width: 100%; z-index: 999999;}.rotating {background-image: url("{{ settings.pre_loader_img | img_url: "master" }}");}.rotating {background-position: center center;background-repeat: no-repeat;bottom: 0;height: auto;left: 0;margin: auto;position: absolute;right: 0; top: 0; width: 100%; }</style>
    {% if settings.display_preloader %}
    <div class="ttloader">
      <span class="rotating"></span>
    </div>
    {% endif %}
    {% section 'header' %} 
    
    <main id="MainContent" class="content-for-layout focus-none wrapper {% if template != 'index' %}wrapper-top{% endif %}" role="main">
      {% if template == 'index' %}<img src="{{ settings.image2 | img_url: 'master' }}" class="half-ring-design" alt="top-main-desing">{% endif %}
      {% if template == 'index' %}<img src="{{ settings.image | img_url: 'master' }}" class="ring-img" alt="ring">{% endif %}
      {{ content_for_layout }}
    </main>
     {% section 'footer' %}
     {% section 'quickview' %}
    {% if template == 'index' %}
      {% section 'recommendations-product' %}
      {% render 'popup-cookie' %}
    {% endif %}
    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      }

      window.accessibilityStrings = {
        imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
        pauseSlideshow: `{{ 'sections.slideshow.pause_slideshow' | t }}`,
        playSlideshow: `{{ 'sections.slideshow.play_slideshow' | t }}`,
      }
    </script>

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
    {% if template == 'index' %}
      {% render 'popup-newsletter' %}
    {% endif %}
    {{ 'jquery.fancybox.min.js' | asset_url | script_tag }}
    <script src="{{ 'slick.min.js' | asset_url }}"></script>
     <script src="{{ 'slick-lightbox.js' | asset_url }}"></script>
    {% if shop.locale == 'ar' or shop.locale == 'he' or shop.locale == 'ur' %}
      <script src="{{ 'custom-rtl.js' | asset_url }}"></script>
    {% else %}
      <script src="{{ 'custom.js' | asset_url }}"></script>
    {% endif %}
    <script src="{{ 'variant.js' | asset_url }}"></script> 
    <script src="{{ 'compare.js' | asset_url }}" defer></script>
    {{ '//ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js' | script_tag }}
    {{ 'jquery.products.min.js' | asset_url | script_tag }}
   
        <script src="{{ 'product-form.js' | asset_url }}"></script>
    {{ 'wishlist.js' | asset_url | script_tag }}  
    <script> 
        jQuery(window).on('load', function() {       
          jQuery(".ttloader").fadeOut(500); 
          jQuery(".ttloader .rotating").addClass("load-open");  
        });
    </script>

  </body>
</html>
