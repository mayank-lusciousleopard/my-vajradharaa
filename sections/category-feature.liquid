<div class=" container" data-section="category-feature">
  <div class="row">
    <div class="col-md-6 col-12 img-main-box">
      <div class="img-box">
        <img src="{{ section.settings.image | img_url: 'master' }}" class="card-img" alt="img2">
          <div class="inner-text">
            <div class="top-title">
              <span>{{ 'blogs.sidebar.categories' | t }}</span>
                {% if section.settings.heading != blank %}<h3>{{ section.settings.heading }}</h3>{% endif %}
            </div>
            {% if section.settings.btn != blank %}
              <a href="{{ section.settings.btn_link }}" class="home-btn btn">{{ section.settings.btn }} {% render "category-circal" %}</a>
            {% endif %}
          </div>
      </div>
    </div>
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <div class="col-lg-3 col-sm-6 col-12 img-main-box">
      <div class="img-box">
        <img src="{{ block.settings.image2 | img_url: 'master' }}" class="card-img" alt="img2">
          <div class="inner-text">
            <div class="top-title">
              <span>{{ 'blogs.sidebar.categories' | t }}</span>
                {% if block.settings.heading1 != blank %}<h3>{{ block.settings.heading1 }}</h3>{% endif %}
            </div>
            {% if block.settings.btn1 != blank %}
              <a href="{{ block.settings.btn_link1 }}" class="home-btn btn">{{ block.settings.btn1 }} {% render "category-circal" %}</a>
            {% endif %}
          </div>
      </div>
    </div>
      {% endfor %}
    {% endif %}      
  </div>
</div>
{% schema %}
{
"name": "category-feature",
"tag": "section",
"class": "card-sec card-sec2 padding-bottom",
"max_blocks":2,
  "settings":[
      {
        "type": "image_picker",
        "id": "image",
        "label": "t:settings_schema.Our-partners.settings.image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "t:settings_schema.Our-partners.settings.heading"
      },
      {
        "type": "text",
        "id": "btn",
        "label": "t:settings_schema.Our-partners.settings.btn"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "t:settings_schema.Our-partners.settings.btn_link"
      }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Best-Collection",
      "settings":[
          {
            "type": "image_picker",
            "id": "image2",
            "label": "t:settings_schema.Our-partners.blocks.image"
          },
          {
            "type": "text",
            "id": "heading1",
            "label": "t:settings_schema.Our-partners.blocks.heading"
          },
          {
            "type": "text",
            "id": "btn1",
            "label": "t:settings_schema.Our-partners.blocks.btn"
          },
          {
            "type": "url",
            "id": "btn_link1",
            "label": "t:settings_schema.Our-partners.blocks.btn_link"
          }
       ]
    }
  ],
  "presets": [
      {
        "name": "Category Feature"
      }
    ]
  }
{% endschema %}