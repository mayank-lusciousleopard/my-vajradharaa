<div class="container"> 
    <a class="back-btn" href="javascript&colon;history.go(-1)">
      <span class="svg-ic">
        <svg xmlns="http://www.w3.org/2000/svg" width="11" height="5" viewBox="0 0 11 5" fill="none">
                                         <path fill-rule="evenodd" clip-rule="evenodd" d="M10.5791 2.28954C10.5791 2.53299 10.3818 2.73035 10.1383 2.73035L1.52698 2.73048L2.5628 3.73673C2.73742 3.90636 2.74146 4.18544 2.57183 4.36005C2.40219 4.53467 2.12312 4.53871 1.9485 4.36908L0.133482 2.60587C0.0480403 2.52287 -0.000171489 2.40882 -0.000171488 2.2897C-0.000171486 2.17058 0.0480403 2.05653 0.133482 1.97353L1.9485 0.210321C2.12312 0.0406877 2.40219 0.044729 2.57183 0.219347C2.74146 0.393966 2.73742 0.673036 2.5628 0.842669L1.52702 1.84888L10.1383 1.84875C10.3817 1.84874 10.5791 2.04609 10.5791 2.28954Z" fill="white"></path>
                                     </svg>
      </span>Back to Return
    </a>
    <h2 class="heading text-left">{{- collection.title | escape -}}</h2>
      {%- if collection.description != blank -%}
        <div class="row collection-content">
            {%- if section.settings.show_collection_image and collection.image -%}
                <div class="{% if section.settings.show_collection_description and section.settings.show_collection_image %}col-md-3 col-12 {% else %}col-12 {% endif %} collection-image">
                    <img src="{{ collection.image | img_url: 'master' }}" alt="{{ collection.title | escape }}" loading="lazy">
                </div>
            {%- endif -%}
            <div class="{% if section.settings.show_collection_description and section.settings.show_collection_image %}col-md-9 col-12 {% else %}col-12 {% endif %} collection-text">
                {%- if section.settings.show_collection_description -%}
                    <div class="collection-description rte">{{ collection.description }}</dv>
                {%- endif -%}
            </div>
        </div>
      {%- endif -%}
    </div>
{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "tag": "section",
  "class": "common-banner-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.paragraph"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.show_collection_description"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.show_collection_image",
      "info": "t:sections.main-collection-banner.show_collection_image"
    }
  ]
}
{% endschema %}
