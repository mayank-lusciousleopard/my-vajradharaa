<div class="container" data-section="our-partner">
    <div class="main-title">
      {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
    </div>
    {% if section.blocks.size > 0 %}
        <div class="logo-slider-main">
            {% for block in section.blocks %}
                <div class="logo-slide-wrapper">
                    {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" title="{{ 'wbcustomlabel.wballtext.banner' | t }}">
                        {% if block.settings.image != blank %}
                        <img loading="lazy" src="{{ block.settings.image | img_url: 'master' }}" alt="partner" />
                        {% else %}
                        <img loading="lazy" src="https://dummyimage.com/225x150/f5f5f5" alt="logobar" width="225" height="150" />
                        {% endif %}
                    </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div> 

{% schema %}
{
"name": "Our partners",
"tag": "section",
"class": "logo-slider",
"max_blocks": 20,
  "settings": [
      {
        "type": "text",
        "id" : "heading",
        "label": "t:settings_schema.Our-partners.settings.heading"
      }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "t:settings_schema.Our-partners.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:settings_schema.Our-partners.blocks.image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:settings_schema.Our-partners.blocks.link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our partners"
    }
  ]
}
{% endschema %}
